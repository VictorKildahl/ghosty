{
  "name": "ghosttype",
  "version": "0.1.0",
  "private": true,
  "description": "GhostType background ghosting app",
  "main": "dist/main.js",
  "scripts": {
    "dev": "concurrently -k \"next dev\" \"tsup --watch\" \"wait-on http://localhost:3000 && electronmon .\"",
    "build": "next build && tsup",
    "start": "electron .",
    "lint": "next lint",
    "bundle:whisper": "bash scripts/bundle-whisper.sh",
    "bundle:ffmpeg": "bash scripts/bundle-ffmpeg.sh",
    "bundle:deps": "npm run bundle:whisper && npm run bundle:ffmpeg"
  },
  "dependencies": {
    "@ai-sdk/gateway": "^1.0.0",
    "ai": "^5.0.36",
    "next": "^14.2.0",
    "react": "^18.3.0",
    "react-dom": "^18.3.0",
    "uiohook-napi": "^1.5.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.30",
    "@types/react": "^18.2.79",
    "@types/react-dom": "^18.2.25",
    "autoprefixer": "^10.4.19",
    "concurrently": "^8.2.2",
    "electron": "^32.1.0",
    "electronmon": "^2.0.2",
    "postcss": "^8.4.38",
    "tailwindcss": "^3.4.4",
    "tsup": "^8.0.2",
    "typescript": "^5.4.5",
    "wait-on": "^7.2.0"
  }
}
