    "react": "^19.1.0",
    "react-activity-calendar": "^3.1.1",
    "react-dom": "^19.1.0",
    "react-tooltip": "^5.30.0",
    "resend": "^6.9.2",
    "tailwind-merge": "^3.4.0",
    "uiohook-napi": "^1.5.0"
  },
  "devDependencies": {
