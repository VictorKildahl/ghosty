{
  "name": "ghosttype",
  "version": "0.1.0",
  "private": true,
  "description": "GhostType background ghosting app",
  "main": "dist/main.js",
  "scripts": {
    "dev": "concurrently -k \"next dev\" \"tsup --watch\" \"wait-on http://localhost:3000 && electronmon .\"",
    "build": "next build && tsup",
    "start": "electron .",
    "lint": "next lint",
    "bundle:whisper": "bash scripts/bundle-whisper.sh",
    "bundle:ffmpeg": "bash scripts/bundle-ffmpeg.sh",
    "bundle:deps": "npm run bundle:whisper && npm run bundle:ffmpeg"
  },
  "dependencies": {
    "@ai-sdk/gateway": "^1.0.0",
    "ai": "^5.0.36",
    "babel-plugin-react-compiler": "^1.0.0",
    "next": "^16.1.6",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "uiohook-napi": "^1.5.0"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.0",
    "@types/node": "^22.15.0",
    "@types/react": "^19.1.0",
    "@types/react-dom": "^19.1.0",
    "concurrently": "^8.2.2",
    "electron": "^32.1.0",
    "electronmon": "^2.0.2",
    "postcss": "^8.5.0",
    "tailwindcss": "^4.1.0",
    "tsup": "^8.0.2",
    "typescript": "^5.8.0",
    "wait-on": "^7.2.0"
  }
}
