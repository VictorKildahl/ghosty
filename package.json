  "description": "GhostWriter â€” voice-powered ghostwriting app",
  "main": "dist/main.js",
  "scripts": {
    "dev": "concurrently -k \"next dev\" \"tsup --watch\" \"wait-on http://localhost:3000 && electronmon .\"",
    "build": "next build && tsup",
    "start": "electron .",
    "lint": "next lint",
    "bundle:whisper": "bash scripts/bundle-whisper.sh",
